@model MiniFB.Models.LoginModel

<h3>Logga in</h3>

                        @using (Html.BeginForm()) {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <fieldset>
                                <legend></legend>
                                <ol class="registerform-table">
                                        <strong>@Html.ValidationSummary(true)</strong>
                                    <li class="registerform-list">
                                        @Html.LabelFor(m => m.UserName)
                                        @Html.TextBoxFor(m => m.UserName)
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </li>
                                    <li class="registerform-list">
                                        @Html.LabelFor(m => m.Password)
                                        @Html.PasswordFor(m => m.Password)
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </li>
                                    <li class="registerform-list">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox-label" })
                                    </li>
                                </ol>
                                <div class="form-btns">
                                    <input type="submit" value="Logga in" class="btn LogIn" />
                                    @*<button class="btn RegBtn">@Html.ActionLink("Registera dig", "Register", "Account")</button>*@
                                </div>

                            </fieldset>
                        }

