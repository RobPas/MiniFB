@if (Request.IsAuthenticated)
{
    <div class="chat-footer pull-right">
        <h4>Chatt</h4>
    </div>
    <div class="chat-window pull-right">
        <div class="chat-header">
            Dölj
        </div>

        <div id="chatMessages" class="chat-content">
            <i style="position:absolute;cursor:pointer;right: 22px;top: 25px;" class="icon-trash" id="remove-history" title="Ta bort historik"></i>
            <ul id="discussion"></ul>
        </div>

        <div id="chatBox">
            <div>
                <input type="text" id="message" />
                <input class="btn" type="button" id="sendmessage" value="Skicka" />
                <input type="hidden" id="displayname" value="@User.Identity.Name" />
            </div>
        </div>

    </div>
}


<style>
   
    #chatMessages {
        width: auto;
        background-color: #e0e0e0;
        height: 200px;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 10px 0px;
        margin: 0px 0px 5px 0px;
    }

    #message {
        display:block;
        float:left;
        margin: 0px 5px 5px 5px;
        width:164px;
    }

    #sendmessage {
        display:block;
        float:left;
    }


    #discussion li {
        list-style: none;
        margin-left: -15px;
    }
</style>

