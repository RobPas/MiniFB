@model MiniFB.Models.Entities.User

@{
    ViewBag.Title = "Random Chat - MiniFB";
}

<h2>Random Chat</h2>


@Html.ActionLink("återgå till vanlig chatt", "Index", null, new { @class = "btn" })

<br />
<br />

<div>Du chattar nu med @Model.UserName!</div>

<div id="errorDisplay">Felmeddelande</div>

<div id="chatBoxWrapper">
    <div id="chatCloser"></div>

    <div id="chatBox">
        <div id="chatLoader">
            <img src="/images/loading.gif" alt="loading..." /></div>
        <div id="chatMessages"></div>
        <div>@Html.TextBox("chatInput") <input type="hidden" name="sendToID" id="sendToID" value="@Model.ID" /> <input class="btn" type="button" id="chatButtonRandom" value="Skicka"/></div>
        </div>
</div>

