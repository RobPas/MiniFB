@model MiniFB.Models.Entities.NewsFeedItem

@{
    ViewBag.Title = "Skapa Nyhetsinlägg";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>
        @switch((int)ViewBag.type)
        {
            case 1:
                @:Status
                break;
            case 2:
                @:Bild
                break;
            case 3:
                @:Video
                break;
            case 4: 
                @:Länk
                break;
            default:
                break;
        }
        </legend>

        <div class="editor-field">
            <input type="hidden" name="ItemType" value="@ViewBag.type" />
            @Html.ValidationMessageFor(model => model.ItemType)
        </div>

        @if (ViewBag.type == 2)
        {
            @:Förhandsvisning:
            <div class="image-preview">
                <img id="img-pre" class="img-polaroid" src="http://placehold.it/480x240" alt="">
            </div>
        }

        @if (ViewBag.type != 1) 
        {
            <div class="editor-label">
                @Html.LabelFor(m => m.Data, Model.GetItemTypeStr)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Data)
            </div>
            
            <div id="video-preview" style="display:none;">
                <div>PREVIEW:</div>
                
                <iframe id="preview-iframe"  width="560" height="315" src="" frameborder="0" allowfullscreen></iframe>
            </div>
        }

        

        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <p>
            <input type="submit" value="Skapa" class="btn" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Tillbaka till nyhetsflöde", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

            $("#Data").keyup(function () {
                var url = $("#Data").val();

                /* Kollar efter ett video id från en youtube url och plockar ut det. */
                if (url.indexOf("youtube.com") !== -1) {
                    var splited_url1 = url.toString().split('v=');
                    if (splited_url1[1] != undefined) {
                        var splited_url2 = splited_url1[1].split('#');
                        var video_id = splited_url2[0].split('&');
                        var newURL = "http://www.youtube.com/embed/" + video_id[0];


                        $("#preview-iframe").attr("src", newURL);
                        $("#video-preview").show();
                        $("#Data").attr("data-video-url", newURL);
                    } else {
                        $("#video-preview").hide();
                    }
                } else {
                    $("#img-pre").attr("src", url);
                }
                
                
            });

        });
        
    </script>
}
