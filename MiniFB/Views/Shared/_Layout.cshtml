<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - MiniFB</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap/css")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="~/Content/font-awesome-ie7.css" rel="stylesheet" />
        <link href="~/Content/font-awesome.css" rel="stylesheet" />
        <link href="~/Content/Base.css" rel="stylesheet" />
    </head>
    <body>
        <div class="navbar fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="/">Mini FB</a>
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="divider-vertical"></li>
                            @Html.MenuLink("Home", "Index", "Home")
                            <li class="divider-vertical"></li>
                            @Html.MenuLink("NewsFeed", "Index", "NewsFeed")
                            <li class="divider-vertical"></li>
                            @Html.MenuLink("Profile", "Index", "Profile")
                            <li class="divider-vertical"></li>
                            @Html.MenuLink("RandomChat", "Index", "Chat")
                            <li class="divider-vertical"></li>
                        </ul>
                        <form class="navbar-search">
                            <input type="text" class="search-query" placeholder="Search">
                        </form>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div style="display:none;">@RenderSection("featured", required: false)</div>
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer class="fixed-bottom">
            <div class="container-fluid">
                    <p class="trademark">&copy; @DateTime.Now.Year - MiniFB</p>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap/js")
        @RenderSection("scripts", required: false)

    </body>
</html>
