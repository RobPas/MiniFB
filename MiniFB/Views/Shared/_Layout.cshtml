<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - MiniFB</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap/css")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>

        <!--- Top Border --->
        <div id="topBorder"><h1 id="logoTopic">MiniFB</h1></div>
        <!--- Top Border --->

        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("MiniFB", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("NewsFeed", "Index", "NewsFeed")</li>
                            <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                            <li>@Html.ActionLink("RandomChat", "Index", "RandomChat")</li>
                                                       
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <div style="display:none;">@RenderSection("featured", required: false)</div>
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - MiniFB</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap/js")
        @RenderSection("scripts", required: false)


    </body>
</html>
