@if (Request.IsAuthenticated)
{
    
   
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()
    
    <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li>
           
            <li>@Html.ActionLink(User.Identity.Name, "Index", "Profile", routeValues: null, htmlAttributes: new { @class = "username", title = "Din profil."})</li>  
         
        </li>
        <li class="divider-vertical"></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-cog"></i>
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off<i class="icon-signout"></i></a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    
    <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li>
            <ul>
                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })<i class="icon-signout"></i></li>
            </ul>

        </li>
        <li class="divider-vertical"></li>
        
    </ul>
}

